<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example._207028_gpa_calculator_builder.HistoryController"
      spacing="15" style="-fx-background-color: #f5f5f5;" prefWidth="900" prefHeight="600">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="CGPA Calculation History" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="backButton" text="â¬… Back to Home" onAction="#goBackToHome"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8 15; -fx-font-weight: bold;"/>
    </HBox>
    
    <Separator/>
    
    <HBox spacing="20" alignment="CENTER">
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;">
            <Label text="Total Calculations" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
            <Label fx:id="totalCountLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
        </VBox>
        
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;">
            <Label text="Highest CGPA" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
            <Label fx:id="highestCgpaLabel" text="0.00" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
        </VBox>
        
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;">
            <Label text="Latest CGPA" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
            <Label fx:id="latestCgpaLabel" text="0.00" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
        </VBox>
    </HBox>
    
    <VBox VBox.vgrow="ALWAYS" spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;">
        <Label text="Calculation Records" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        
        <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                <TableColumn fx:id="cgpaColumn" text="CGPA" prefWidth="100"/>
                <TableColumn fx:id="creditsColumn" text="Total Credits" prefWidth="120"/>
                <TableColumn fx:id="coursesColumn" text="Courses" prefWidth="100"/>
                <TableColumn fx:id="dateColumn" text="Date Time" prefWidth="180"/>
                <TableColumn fx:id="notesColumn" text="Notes" prefWidth="250"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="editCalculationButton" text="Edit Calculation" onAction="#editCalculation"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-weight: bold;"/>
        <Button fx:id="updateButton" text="Edit Notes" onAction="#updateHistory"
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-weight: bold;"/>
        <Button fx:id="deleteButton" text="Delete Selected" onAction="#deleteHistory"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-weight: bold;"/>
        <Button fx:id="clearAllButton" text="Clear All History" onAction="#clearAllHistory"
                style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-weight: bold;"/>
    </HBox>
    
    <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
    
</VBox>
