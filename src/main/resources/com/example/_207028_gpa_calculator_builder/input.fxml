<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="664.0" prefWidth="687.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example._207028_gpa_calculator_builder.InputController">

    <!-- Top: Header Section -->
    <top>
        <VBox spacing="5" style="-fx-background-color: brown; -fx-border-color: #1565c0; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets bottom="8" left="12" right="12" top="8" />
            </padding>
            <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" text="Course Entry" />
        </VBox>
    </top>

    <!-- Center: Form and Table -->
    <center>
        <VBox spacing="10" style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="12" left="12" right="12" top="12" />
            </padding>

            <!-- Target Credits Section -->
            <VBox spacing="6">
                <Label fx:id="targetCreditLabel" style="-fx-font-size: 11; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" text="Target Credits" />

                <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 8; -fx-background-color: green;">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 10;" text="Credits:" textFill="WHITE" />
                    <TextField fx:id="targetCreditsField" prefHeight="23.0" prefWidth="495.0" promptText="20" style="-fx-padding: 4; -fx-font-size: 10;" HBox.hgrow="ALWAYS" />
                    <Button onAction="#setCredit" style="-fx-padding: 4 12 4 12; -fx-font-size: 10; -fx-font-weight: bold;" text="Set" />
                </HBox>
            </VBox>

            <!-- Course Input Section -->
            <VBox spacing="6">
                <Label style="-fx-font-size: 11; -fx-font-weight: bold; -fx-text-fill: #1976d2;" text="Add Course" />

                <GridPane hgap="8" style="-fx-padding: 10;" styleClass="course-form" vgap="6">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 10;" text="Course Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="nameField" promptText="Advanced Programming Lab" style="-fx-font-size: 10; -fx-padding: 4;" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" />

                    <Label style="-fx-font-weight: bold; -fx-font-size: 10;" text="Course Code" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="codeField" promptText="CSE 2200" style="-fx-font-size: 10; -fx-padding: 4;" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />

                    <Label style="-fx-font-weight: bold; -fx-font-size: 10;" text="Course  Credits" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="creditField" promptText="1.5" style="-fx-font-size: 10; -fx-padding: 4;" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" />

                    <Label style="-fx-font-weight: bold; -fx-font-size: 10;" text="Teacher 1 Name" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="teacher1Field" promptText="Dr. Sk Imran Hossain" style="-fx-font-size: 10; -fx-padding: 4;" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" />

                    <Label style="-fx-font-weight: bold; -fx-font-size: 10;" text="Teacher 2 Name" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField fx:id="teacher2Field" promptText="Mr. Ehsanul Karim Talha" style="-fx-font-size: 10; -fx-padding: 4;" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" />

                    <Label style="-fx-font-weight: bold; -fx-font-size: 10;" text="Grade" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <ComboBox fx:id="gradeBox" promptText="Select" style="-fx-font-size: 10; -fx-padding: 4;" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" />

                    <Button fx:id="addButton" style="-fx-padding: 5 15 5 15; -fx-font-size: 10; -fx-font-weight: bold;" text="Add" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
            </VBox>

            <!-- Course List Section -->
            <VBox spacing="6" VBox.vgrow="ALWAYS">
                <Label style="-fx-font-size: 11; -fx-font-weight: bold; -fx-text-fill: #1976d2;" text="Courses" />
                <TableView fx:id="courseTable" prefHeight="150" style="-fx-font-size: 9;" styleClass="course-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nameCol" prefWidth="189.0" text="Course Name" />
                        <TableColumn fx:id="codeCol" prefWidth="66.0" text="Course Code" />
                        <TableColumn fx:id="creditCol" prefWidth="77.0" text="Course Credit" />
                        <TableColumn fx:id="teacher1Col" prefWidth="118.0" text="Teacher 1 Name" />
                        <TableColumn fx:id="teacher2Col" prefWidth="122.0" text="Teacher 2 Name" />
                        <TableColumn fx:id="gradeCol" prefWidth="90.0" text="Grade" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- Bottom: Control Buttons -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets bottom="8" left="12" right="12" top="8" />
            </padding>
            <Button fx:id="backButton" onAction="#goToWelcome" style="-fx-padding: 6 15 6 15; -fx-font-size: 10;" text="Back" />
            <Button fx:id="resetButton" onAction="#resetForm" style="-fx-padding: 6 15 6 15; -fx-font-size: 10;" text="Reset" />
            <Button fx:id="calculateButton" disable="true" onAction="#calculateGPA" style="-fx-padding: 6 18 6 18; -fx-font-size: 10;" styleClass="main-btn" text="Calculate GPA" />
        </HBox>
    </bottom>
</BorderPane>
